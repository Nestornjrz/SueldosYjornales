@{
    ViewBag.Title = "Index";
}

@section scripts{
    <script src="~/Scripts/LiquidacionSalarios/Index/Services/common.services.js"></script>
    <script type="text/javascript">
        (function () {
            'use strict';
            angular
                .module('sueldosYjornalesApp')
                .factory('sYjResource', sYjResource);

            sYjResource.$inject = ['$resource'];

            function sYjResource($resource) {
                var empleados = $resource("@Href("~/api/Empleados")");
                var ubicacionSucUsuarios = $resource("@Href("~/api/UbicacionSucUsuarios")");
                var empleadosSegunUbicacionSucursal = $resource("@Href("~/api/Empleados/SegunUbicacionSucursal")");
                var liquidacionSalarios = $resource("@Href("~/api/LiquidacionSalarios")");
                var liquidacionSalariosDetalles = $resource("@Href("~/api/LiquidacionSalarios/Detalles")");
                var liquiSalariosDetallesUnSoloEmpleado = $resource("@Href("~/api/LiquidacionSalarios/DetallesUnSoloEmpleado")");
                var modificarPrestamos = $resource("@Href("~/api/ModificarPrestamos")");
                var prestamoSimMovs = $resource("@Href("~/api/PrestamoSimMovs")");
                var liquidacionAguinaldos = $resource("@Href("~/api/LiquidacionAguinaldos")");
                var liquidacionAguinaldosDetalles = $resource("@Href("~/api/LiquidacionAguinaldos/Detalles")");


                return {
                    "empleados": empleados,
                    "ubicacionSucUsuarios": ubicacionSucUsuarios,
                    "empleadosSegunUbicacionSucursal": empleadosSegunUbicacionSucursal,
                    "liquidacionSalarios": liquidacionSalarios,
                    "liquidacionSalariosDetalles": liquidacionSalariosDetalles,
                    "liquiSalariosDetallesUnSoloEmpleado":liquiSalariosDetallesUnSoloEmpleado,
                    "modificarPrestamos": modificarPrestamos,
                    "prestamoSimMovs": prestamoSimMovs,
                    "liquidacionAguinaldos": liquidacionAguinaldos,
                    "liquidacionAguinaldosDetalles": liquidacionAguinaldosDetalles
                }
            }
        })();
    </script>
    @*controladores*@
    <script src="~/Scripts/LiquidacionSalarios/Index/Controllers/menuCtrl.js"></script>
    <script src="~/Scripts/LiquidacionSalarios/Index/Controllers/listadoEmpleadosCtrl.js"></script>
    <script src="~/Scripts/LiquidacionSalarios/Index/Controllers/ControlVisoresCtrl.js"></script>
    <script src="~/Scripts/LiquidacionSalarios/Index/Controllers/mensajesCtrl.js"></script>
    <script src="~/Scripts/LiquidacionSalarios/Index/Controllers/mensajesAguinaldoCtrl.js"></script>
}
<div class="row" style="margin-top:25px;" ng-controller="menuCtrl" ng-cloak>
    <div class="col-md-5">
        @Html.Partial("Index/_ListadoEmpleados")
    </div>
    <div class="col-md-7">
        @Html.Partial("Index/_Mensajes")
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Cargar Profesiones</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" ng-controller="profesionesCtrl as vm" name="profesionesForm" ng-cloak>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="nombreCargo" class="col-md-5 control-label">Nombre</label>
                            <div class="col-md-7">
                                <input type="text" class="form-control" ng-model="vm.profesione.nombreProfesion" name="nombreProfesion" ng-required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="nombreCargo" class="col-md-5 control-label">Abreviatura</label>
                            <div class="col-md-7">
                                <input type="text" class="form-control" ng-model="vm.profesione.abreviatura" name="abreviatura" ng-required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <!--<label for="observacion" class="col-md-3 control-label">Observacion</label>-->
                            <div class="col-md-12">
                                <textarea class="form-control" style="max-width:100%;"
                                          ng-model="vm.profesione.descripcion"
                                          rows="5"
                                          placeholder="Cargar descripcion de la sucursal..."></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button ng-click="vm.guardar()" ng-disabled="profesionesForm.$invalid" class="btn btn-default">
                                    <span ng-show="vm.profesione.profesionID == null">Cargar Profesion</span>
                                    <span ng-show="vm.profesione.profesionID != null">Editar sucursal ID: {{vm.sucursale.sucursalID}}</span>
                                </button>
                                <button ng-click="vm.nuevoParaCargar()" class="btn btn-default">
                                    Nuevo
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">Aviso</div>
                                <div class="panel-body">
                                    {{vm.mensajeDelServidor}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <pre>{{vm.profesione | json}}</pre>
                </form>
            </div>
        </div>
    </div>
</div>
